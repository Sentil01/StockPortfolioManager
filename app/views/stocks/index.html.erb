<p id="notice"><%= notice %></p>


<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ticker symbol</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ticker_symbol %></td>
        <td><%= stock.price %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag search_stocks_path,method: :get do %>
  <div class="form-group">
    <%= text_field_tag :stock,params[:stock],placeholder: "Search Stock" %>

  </div>
  <div class="form-group">
    <%= button_to "Search",class: "btn btn-success" %>
  </div>
<%end %>



<%= link_to 'New Stock', new_stock_path %>


